@model App_Web.Models.Brand

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="p-2">Chi tiết thương hiệu</h1>

<div>
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <tr>
                <th class="text-center">
                    No.
                </th>
                <th class="text-center">
                    Tên thương hiệu
                </th>
            </tr>
            <tr>
                <td class="text-center"> @Html.DisplayFor(model => model.BrandId)</td>
                <td class="text-center"> @Html.DisplayFor(model => model.BrandName)</td>
            </tr>
        </table>
        <div class="text-center d-flex align-middle justify-content-center">
            <a href="/Admin/Brands/Edit?id=@Model?.BrandId" class="btn btn-secondary">Sửa</a>
            <form method="post" action="/Admin/Brands/Delete" onsubmit="return confirm('Bạn chắc chắn xóa?');">
                <input type="hidden" name="id" value="@Model?.BrandId" />
                <button type="submit" class="btn btn-danger">Xóa</button>
            </form>
            <a class="btn btn-info" href="/Admin/Brands">Trở về danh sách</a>
        </div>
    </div>
</div>