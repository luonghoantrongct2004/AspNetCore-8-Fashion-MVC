@model IEnumerable<App_Web.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="p-2">Danh sách thương hiệu</h1>

<p class="pl-2 ">
    <a href="/Admin/Brands/Create" class="btn btn-success">Thêm thương hiệu mới</a>
</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th class="text-center">
                No.
            </th>
            <th class="text-center">
                Tên thương hiệu
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="text-center">
                @Html.DisplayFor(modelItem => item.BrandId)
            </td>
                <td class="text-center">
                @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td class="text-center align-middle">
                    <div class="d-flex justify-content-center">
                        <a href="/Admin/Brands/Edit/@item.BrandId" class="btn btn-secondary mr-2">Sửa</a>
                        <form method="post" action="/Admin/Brands/Delete" onsubmit="return confirm('Bạn chắc chắn xóa?');">
                            <input type="hidden" name="id" value="@item.BrandId" />
                            <button type="submit" class="btn btn-danger mr-2">Xóa</button>
                        </form>
                        <a href="/Admin/Brands/Details/@item.BrandId" class="btn btn-info">Chi tiết</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
