@model App_Web.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="p-2">Chi tiết danh mục</h1>

<div>
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <tr>
                <th class="text-center">
                    Tên danh mục
                </th>
                <td class="text-center"> @Html.DisplayFor(model => model.CategoryName)</td>
            </tr>
        </table>
        <div class="text-center d-flex align-middle justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-secondary">Sửa</a>
            <form method="post" action="/Admin/Categories/Delete" onsubmit="return confirm('Bạn chắc chắn xóa?');">
                <input type="hidden" name="id" value="@Model?.CategoryId" />
                <button type="submit" class="btn btn-danger">Xóa</button>
            </form>
            <a href="/Admin/Categories/Index" class="btn btn-info">Quay lại danh sách</a>
        </div>
    </div>
</div>
