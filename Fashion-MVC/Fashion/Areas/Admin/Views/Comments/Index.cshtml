@model IEnumerable<App_Web.Models.Comment>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="p-2">Danh sách Comment</h1>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th class="text-center">
                Nội dung
            </th>
            <th class="text-center">
                Ngày đăng
            </th>
            <th class="text-center">
                Đánh giá
            </th>
            <th class="text-center">
                Người dùng
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PostedAt)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.StarRating)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td class="text-center align-middle">
                    <div class="d-flex justify-content-center">
                        <a href="/Admin/Comments/Details?id=@item.Id" class="btn btn-info mr-2">Chi tiết</a>
                        <form method="post" action="/Admin/Comments/Delete" onsubmit="return confirm('Bạn chắc chắn xóa?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
