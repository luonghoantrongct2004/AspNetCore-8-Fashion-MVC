@model App_Web.Models.Coupon

@{
    ViewData["Title"] = "Chi tiết mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="p-2 text-center">Chi tiết mã giảm giá</h1>

<div class="text-center">
    <div class="table-responsive">
        <h4>Mã giảm giá</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CouponCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CouponCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DiscountAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DiscountAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MinAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MinAmount)
            </dd>
        </dl>
        <div class="d-flex align-middle justify-content-center">
            <a href="/Admin/Coupons/Edit?id=@Model.CouponId" class="btn btn-secondary">Sửa</a>
            <form method="post" action="/Admin/Coupons/Delete" onsubmit="return confirm('Bạn chắc chắn muốn xóa?');">
                <input type="hidden" name="id" value="@Model.CouponId" />
                <button type="submit" class="btn btn-danger">Xóa</button>
            </form>
            <a href="/Admin/Coupons" class="btn btn-info">Quay lại danh sách</a>
        </div>
    </div>
</div>
