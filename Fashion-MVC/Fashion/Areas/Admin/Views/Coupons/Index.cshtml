@model IEnumerable<App_Web.Models.Coupon>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1 class="p-2">Danh sách Coupon</h1>

<p class="pl-2">
    <a href="/Admin/Coupons/Create" class="btn btn-success">Thêm Coupon mới</a>
</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th class="text-center">
                Mã Coupon
            </th>
            <th class="text-center">
                Giảm giá
            </th>
            <th class="text-center">
                Giá tối thiểu
            </th>
            <th class="text-center">
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CouponCode)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DiscountAmount)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MinAmount)
                </td>
                <td class="text-center align-middle">
                    <div class="d-flex justify-content-center">
                        <a href="/Admin/Coupons/Edit?id=@item.CouponId" class="btn btn-secondary mr-2">Sửa</a>
                        <a href="/Admin/Coupons/Details?id=@item.CouponId" class="btn btn-info mr-2">Chi tiết</a>
                        <form method="post" action="/Admin/Coupons/Delete" onsubmit="return confirm('Bạn chắc chắn xóa?');">
                            <input type="hidden" name="id" value="@item.CouponId" />
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

