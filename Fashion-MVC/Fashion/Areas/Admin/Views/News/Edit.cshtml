@model App_Web.Models.News

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="p-2"> Chỉnh sửa tin tức</h4>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <form method="post" action="/Admin/News/Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title" class="control-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Author" class="control-label">Tác giả</label>
                    <input asp-for="Author" class="form-control" value="@ViewBag.Fullname" readonly />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 d-flex">
                    <img src="@Model.Image?.First()" name="Image" alt="Image" class="img-thumbnail" style="max-width: 100px; max-height: 65px; margin-right: 10px;" />
                    <input type="file" name="files" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group justify-content-start text-center">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/Admin/News/Index" class="btn btn-primary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
