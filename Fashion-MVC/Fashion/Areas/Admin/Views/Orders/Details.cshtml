@model App_Web.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="p-2">Chi tiết đơn hàng</h3>

<div class="table-responsive">
    <table class="table table-striped table-condensed">
        <tbody>
            <tr>
                <th class="text-center">Ngày đặt hàng</th>
                <td class="text-center">@Html.DisplayFor(model => model.OrderDate)</td>
            </tr>
            <tr>
                <th class="text-center">Ngày giao hàng</th>
                <td class="text-center">@Html.DisplayFor(model => model.ShipDate)</td>
            </tr>
            <tr>
                <th class="text-center">Tên sản phẩm</th>
                <td class="text-center">
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <div style="text-wrap: pretty;">@orderDetail.Product?.ProductName <p>@orderDetail.Color - @orderDetail.Size</p></div>
                    }
                </td>
            </tr>
            <tr>
                <th class="text-center">Số lượng</th>

                <td class="text-center">
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <div>@orderDetail.Quantity</div>
                    }
                </td>
            </tr>
            <tr>
                <th class="text-center">Ngày thanh toán</th>
                <td class="text-center">@Html.DisplayFor(model => model.PaymentDate)</td>
            </tr>
            <tr>
                <th class="text-center">ID Thanh toán</th>
                <td class="text-center">@Html.DisplayFor(model => model.PaymentId)</td>
            </tr>
            <tr>
                <th class="text-center">Ghi chú</th>
                <td class="text-center">@Html.DisplayFor(model => model.Note)</td>
            </tr>
            <tr>
                <th class="text-center">Ngày tạo</th>
                <td class="text-center">@Html.DisplayFor(model => model.CreatedAt)</td>
            </tr>
            <tr>
                <th class="text-center">ID Shipper</th>
                <td class="text-center">@Html.DisplayFor(model => model.ShipperId)</td>
            </tr>
            <tr>
                <th class="text-center">Email người đặt hàng</th>
                <td class="text-center">@Html.DisplayFor(model => model.User.Email)</td>
            </tr>
            <tr>
                <th class="text-center">Trạng thái</th>
                <td class="text-center">@Html.DisplayFor(model => model.Status)</td>
            </tr>
            <tr>
                <th class="text-center">Phương thức thanh toán</th>
                <td class="text-center">@Html.DisplayFor(model => model.PaymentMethod)</td>
            </tr>
            <tr>
                <th class="text-center">Địa chỉ giao hàng</th>
                <td class="text-center">@Html.DisplayFor(model => model.ShippingAddress)</td>
            </tr>
            <tr>
                <th class="text-center">Số điện thoại liên hệ</th>
                <td class="text-center">@Html.DisplayFor(model => model.ContactPhone)</td>
            </tr>
            <tr>
                <th class="text-center">Tổng giá</th>
                <td class="text-center">@Html.DisplayFor(model => model.TotalPrice)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-center d-flex align-middle justify-content-center">
    <a href="/Admin/Orders/Index" class="btn btn-info">Quay lại danh sách</a>
</div>
