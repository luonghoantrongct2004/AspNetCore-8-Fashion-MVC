@model App.Areas.Admin.Models.AddRoleViewModel

<h2 class="p-2">Thêm vai trò cho người dùng</h2>

<div class="container">
    <form action="/Admin/Role/AddRoleForUser" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="form-group col-lg-5">
                <label asp-for="UserId">Chọn người dùng:</label>
                <select asp-for="UserId" asp-items="@Model.Users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group col-lg-5">
                <label asp-for="RoleId">Chọn vai trò:</label>
                <select asp-for="RoleId" asp-items="@Model.Roles" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2 text-center" style="padding-top:28px">
                <button type="submit" class="btn btn-primary">Thêm vai trò</button>
            </div>
        </div>
    </form>
</div>
